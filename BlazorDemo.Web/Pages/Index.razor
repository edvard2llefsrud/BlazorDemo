@page "/"
@using BlazorDemo.Web.Pages.Components

@if (ApiCallIsRunning)
{
    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Style="margin-top: 20px;">
        <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Width="100%" Height="50px" />
        <br/>
        <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Width="100%" Height="50px" />
        <br/>
        <MudSkeleton Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Width="100%" Height="300px" />
    </MudContainer>
}
else
{
    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
        <EmployeeTable Employees="@employees" SelectedEmployeeCallback="EmployeeClicked"/>
    </MudContainer>

    <MudButton OnClick="@OpenAddEmployeeModal" Variant="Variant.Filled">+ Add</MudButton>

    <MudOverlay @bind-Visible="DisplayEmployeeDetailsModal" DarkBackground="true" AutoClose="true">
        <EmployeeDetailsModal SelectedEmployee="selectedEmployee"/>
    </MudOverlay>

    <MudOverlay @bind-Visible="DisplayAddEmployeeModal" DarkBackground="true">
        <AddEmployeeModal AddEmployeeCallback="AddEmployee"></AddEmployeeModal>
    </MudOverlay>
}


