<MudCard>
    <MudCardContent>
        <MudText>@SelectedEmployee.FirstName @SelectedEmployee.LastName</MudText>
        <MudText Typo="Typo.body2">Title: @SelectedEmployee.Title</MudText>
        <MudText Typo="Typo.body2">Office: @SelectedEmployee.Office</MudText>
        <MudText Typo="Typo.body2">Preffered Ui Framework: @SelectedEmployee.PreferedUiFramework</MudText>
        <MudText Typo="Typo.body2">Employee rating: <MudRating SelectedValue="@SelectedEmployee.EmployeeRating" ReadOnly="true"></MudRating></MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
    </MudCardActions>
</MudCard>
