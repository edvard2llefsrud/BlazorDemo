@inherits LayoutComponentBase

<PageTitle>BlazorDemo</PageTitle>

<MudThemeProvider Theme="themeHandler.GetTheme()" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="5">
        <MudText>This is a test</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Docked" @bind-Open="@open" Elevation="1">
        <MudDrawerHeader>
            <img src="/Images/TrionaLogo.svg" width="200px" height="100px"/>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudText Typo="Typo.h6">My App</MudText>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
